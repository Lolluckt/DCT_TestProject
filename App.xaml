<Application x:Class="CryptoTrackerApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:infrastructure="clr-namespace:CryptoTrackerApp.Infrastructure"
             StartupUri="Views/ShellView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Light.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <infrastructure:PercentageColorConverter x:Key="PercentageColorConverter" 
                xmlns:local="clr-namespace:CryptoTrackerApp.Infrastructure"/>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <infrastructure:BoolToRotationConverter x:Key="BoolToRotationConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
