<Window x:Class="CryptoTrackerApp.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CryptoTrackerApp.ViewModels"
        Title="Crypto Tracker" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:ShellViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Column="0"/>
        <Border Grid.Column="1" Background="#FFF8F8F8" Padding="10">
            <StackPanel>
                <TextBlock Text="MENU" FontSize="18" FontWeight="Bold" Foreground="Gray" Margin="0,0,0,10"/>
                <Button Content="Home" Command="{Binding NavigateHomeCommand}" Margin="0,5"/>
                <Button Content="Back" Command="{Binding GoBackCommand}" Margin="0,5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
